<main>
  <div class="container-fluid">
    <h1 class="mt-4">{{btitle}}</h1>
    <div class="card mb-4">
      
      {{#if recipedetails}}
      <div class="card-body">
        <form method="post" action="/admin/addrecipe" enctype="multipart/form-data">
            <input type="hidden" name="recipeid" value={{recipedetails.id}} />
            <input type="hidden" name="prevrecipeimage" value={{recipedetails.image}} />
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" name="rname" class="form-control" value={{recipedetails.recipyname}}  placeholder="Name" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Price</label>
              <input type="text" name="rprice" class="form-control" value={{recipedetails.price}} placeholder="Price" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Recipe Image</label>
              <div>
                <img src="/recipe_images/{{recipedetails.image}}" style="width:150px;height:150px;border-radius:75px" />
                <input type="file" name="recipeImage"  />
              </div>
            </div>
          
            <button  class="btn btn-primary">Submit</button>
          </form>
      </div>
        {{else}}
        <div class="card-body">
        <form method="post" action="/admin/addrecipe" enctype="multipart/form-data">
          <input type="hidden" name="recipeid" value="0" />
          <input type="hidden" name="prevrecipeimage" />
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" name="rname" class="form-control"  placeholder="Name" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Price</label>
            <input type="text" name="rprice" class="form-control"  placeholder="Price" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Recipe Image</label>
            <div>
            
              <input type="file" name="recipeImage"  />
            </div>
          </div>
        
          <button  class="btn btn-primary">Submit</button>
        </form>
        </div>
        {{/if}}

        {{#if message}}
                      <div class="alert alert-danger mt-4">{{message}}</div>
                      {{/if}}
    </div>
  </div>
</main>

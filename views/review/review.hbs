<main>
    <div class="container-fluid">
        <h1 class="mt-4">Client</h1>
     
        <div class="card mb-4">
            
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Status</th>
                               
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        
                        <tbody>
                              {{#each allreview}}
                                  <tr>
                                    <td>{{this.description}}</td>
                                   
                                    {{#if this.status}}
                                   <td><a href="/admin/approvereview/{{this.id}}/{{this.userid}}/0">Approved</a></td>
                                    {{else}}
                                    <td><a href="/admin/approvereview/{{this.id}}/{{this.userid}}/1">Waiting Approval</a></td>
                                    
                                    {{/if}}
                                   
                                    <td><a href="/admin/editreview/{{this.id}}">Edit</a>||<a href="/admin/deletereview/{{this.id}}/{{this.userid}}">Delete</a></td>
                                  </tr>
                              {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>


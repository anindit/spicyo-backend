<main>
  <div class="container-fluid">
    <h1 class="mt-4">{{btitle}}</h1>
    <div class="card mb-4">
      
      {{#if clientdetails}}
      <div class="card-body">
        <form method="post" action="/admin/addclient" enctype="multipart/form-data">
            <input type="hidden" name="clientid" value={{clientdetails.id}} />
            <input type="hidden" name="prevclientimage" value={{clientdetails.profileimage}} />
            <div class="form-group">
              <label for="exampleInputEmail1">Username</label>
              <input type="text" name="uname" class="form-control" value={{clientdetails.username}}  placeholder="Username" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input type="text" name="uemail" class="form-control" value={{clientdetails.email}} placeholder="Email" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Client Image</label>
              <div>
                <img src="/myprofile_images/{{clientdetails.profileimage}}" style="width:150px;height:150px;border-radius:75px" />
                <input type="file" name="clientImage"  />
              </div>
            </div>
          
            <button  class="btn btn-primary">Submit</button>
          </form>
      </div>
        {{else}}
        <div class="card-body">
        <form method="post" action="/admin/addclient" enctype="multipart/form-data">
          <input type="hidden" name="clientid" value="0" />
          <input type="hidden" name="prevclientimage" />
          <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" name="uname" class="form-control"  placeholder="Username" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="text" name="uemail" class="form-control"  placeholder="Email" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Client Image</label>
            <div>
            
              <input type="file" name="clientImage"  />
            </div>
          </div>
        
          <button  class="btn btn-primary">Submit</button>
        </form>
        </div>
        {{/if}}

        {{#if message}}
                      <div class="alert alert-danger mt-4">{{message}}</div>
                      {{/if}}
    </div>
  </div>
</main>

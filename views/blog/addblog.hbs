<main>
  <div class="container-fluid">
    <h1 class="mt-4">{{btitle}}</h1>
    <div class="card mb-4">
      
      {{#if blogdetails}}
      <div class="card-body">
        <form method="post" action="/admin/addblog" enctype="multipart/form-data">
            <input type="hidden" name="blogid" value={{blogdetails.id}} />
            <input type="hidden" name="prevblogimage" value={{blogdetails.blog_img}} />
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input type="text" name="bname" class="form-control" value={{blogdetails.name}}  placeholder="Name" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Description</label>
              <textarea  name="blogdesc" class="form-control"  placeholder="Desc" required>{{blogdetails.description}}</textarea>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Blog Image</label>
              <div>
                <img src="/blog_images/{{blogdetails.blog_img}}" style="width:150px;height:150px;border-radius:75px" />
                <input type="file" name="blogImage"  />
              </div>
            </div>
          
            <button  class="btn btn-primary">Submit</button>
          </form>
      </div>
        {{else}}
        <div class="card-body">
        <form method="post" action="/admin/addblog" enctype="multipart/form-data">
          <input type="hidden" name="blogid" value="0" />
          <input type="hidden" name="prevblogimage" />
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" name="bname" class="form-control"  placeholder="Name" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <textarea  name="blogdesc" class="form-control"  placeholder="Desc" required></textarea>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Blog Image</label>
            <div>
            
              <input type="file" name="blogImage"  />
            </div>
          </div>
        
          <button  class="btn btn-primary">Submit</button>
        </form>
        </div>
        {{/if}}

        {{#if message}}
                      <div class="alert alert-danger mt-4">{{message}}</div>
                      {{/if}}
    </div>
  </div>
</main>

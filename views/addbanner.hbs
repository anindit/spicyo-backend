<main>
  <div class="container-fluid">
    <h1 class="mt-4">{{btitle}}</h1>
    <div class="card mb-4">
      
      {{#if bannerdetails}}
      <div class="card-body">
        <form method="post" action="/admin/addbanner" enctype="multipart/form-data">
            <input type="hidden" name="bannerid" value={{bannerdetails.id}} />
            <input type="hidden" name="prevbannerimage" value="{{bannerdetails.banimage}}" />
            <div class="form-group">
              <label for="exampleInputEmail1">Title</label>
              <input type="text" name="title" class="form-control" value={{bannerdetails.title}}  placeholder="Title" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Description</label>
              <textarea name="desc" class="form-control" placeholder="Description" required>{{bannerdetails.description}}</textarea>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Banner Image</label>
              <div>
                <img src="/banner_images/{{bannerdetails.banimage}}" style="width:150px;height:150px;border-radius:75px" />
                <input type="file" name="bannerImage"  />
              </div>
            </div>
          
            <button  class="btn btn-primary">Submit</button>
          </form>
      </div>
        {{else}}
        <div class="card-body">
        <form method="post" action="/admin/addbanner" enctype="multipart/form-data">
          <input type="hidden" name="bannerid" value="0" />
          <input type="hidden" name="prevbannerimage" />
          <div class="form-group">
            <label for="exampleInputEmail1">Title</label>
            <input type="text" name="title" class="form-control"  placeholder="Title" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <textarea name="desc" class="form-control" placeholder="Description" required>{{desc}}</textarea>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Banner Image</label>
            <div>
            
              <input type="file" name="bannerImage"  />
            </div>
          </div>
        
          <button  class="btn btn-primary">Submit</button>
        </form>
        </div>
        {{/if}}

        {{#if message}}
                      <div class="alert alert-danger mt-4">{{message}}</div>
                      {{/if}}
    </div>
  </div>
</main>
